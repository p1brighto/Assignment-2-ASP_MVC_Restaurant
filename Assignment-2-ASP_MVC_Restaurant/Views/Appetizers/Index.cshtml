@model IEnumerable<Assignment_2_ASP_MVC_Restaurant.Models.Appetizer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Create")" class="btn btn-success" title="Add new Appetizer"> <i class="fa fa-plus"></i> Add new Appetizer</a>
    }
</p>
<table class="table table-condensed">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppetizerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppetizerShortDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img alt="test" src="" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppetizerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppetizerShortDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id=item.AppetizerID })" class="btn btn-primary" title="Details"> <i class="fa fa-info"></i> More info</a>

                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Edit", new { id=item.AppetizerID })" class="btn btn-default" title="Edit"> <i class="fa fa-pencil"></i> Edit</a>
                    <a href="@Url.Action("Delete", new { id=item.AppetizerID })" class="btn btn-danger" title="Delete"> <i class="fa fa-trash"></i> Delete</a>
                }
            </td>
        </tr>
    }

</table>
