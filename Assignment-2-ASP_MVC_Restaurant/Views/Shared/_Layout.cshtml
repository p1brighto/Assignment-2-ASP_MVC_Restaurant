<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Restaurant Site</title>

    <link href="https://fonts.googleapis.com/css?family=Cookie|Lora:400,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand"><img id="brand" alt="Brand" src="~/Assets/images/logo.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    <li class="@(ViewBag.Title.ToString() == "Home Page" ? "active" : "")"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="@(ViewBag.Title.ToString() == "About Us" ? "active" : "")"><a href="@Url.Action("About","Home")">About</a></li>
                    <li class="@(ViewBag.Title.ToString() == "Get in Touch" ? "active" : "")"><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <li class="@(ViewBag.Title.ToString() == "Dashboard" ? "active" : "")"><a href="@Url.Action("Index","FoodItems")">Dashboard</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>&copy; @DateTime.Now.Year - Crafted by p1brighto & Simplesphere</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
