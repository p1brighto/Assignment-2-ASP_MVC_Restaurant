@model IEnumerable<Assignment_2_ASP_MVC_Restaurant.Models.FoodItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="main-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title.</h2>
            </div>
        </div>
    </div>
</section>

<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
            </div>
            <div class="col-md-12">

                <table class="table table-condensed">
                    <tr>
                        <th>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FoodItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ShortDesc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-thumbnail" width="100" height="120" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FoodItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortDesc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id=item.FoodItemID })" class="btn btn-primary" title="Details"> <i class="fa fa-info"></i> More info</a>
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</section>

